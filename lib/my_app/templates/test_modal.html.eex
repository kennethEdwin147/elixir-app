    <h2 class="text-sm font-medium text-gray-900">Kenneth Edwin </h2>
  </div>

  <!-- Create Note button -->
  <div class="p-4 py-2">
    <button
      onclick="document.getElementById('createModal').open = true"

    class="w-full bg-gray-100 font-extrabold flex items-center gap-3 p-3 hover:bg-gray-200 rounded-lg text-gray-700 font-medium">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
