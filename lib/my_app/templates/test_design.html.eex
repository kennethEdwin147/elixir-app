          <div
            id="search-input"
            class="flex-1  flex items-center space-x-4">
              <input
                type="text"
                placeholder="Search (ctrl + k)"
                class="p-2  bg-gray-200 rounded-full w-full max-w-sm focus:outline-none">
          </div>

          <div class="flex items-center space-x-4">
              <button class="bg-black text-xs font-semibold text-white px-4 py-3 rounded-full">Sign in</button>
          </div>
      </div>
  </header>

  <aside class="hidden   lg:flex fixed top-16 left-0 w-80  border-gray-200 p-4 z-10
                h-[calc(100vh-4rem)] overflow-y-auto px-4">
