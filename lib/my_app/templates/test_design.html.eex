      <a href="#" class="block p-2 rounded-lg hover:bg-gray-50">Recent comments</a>
      </nav>
  </aside>

  <main class="flex-1 lg:ml-80 mt-16 p-4 pt-4">
      <section class="bg-white max-w-2xl space-y-1">


<!-- Start: main-article -->
<hr>
<article class=" p-2 rounded-lg hover:bg-gray-50 transition-colors duration-300">
    <div class="flex items-start justify-between">

        <header class="flex-1 pr-4 space-y-2">

            <div class="flex items-center text-sm mb-1 gap-x-2">
